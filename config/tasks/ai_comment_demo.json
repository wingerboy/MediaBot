{
  "session_id": "ai_comment_demo",
  "name": "AI智能评论演示",
  "description": "展示AI生成评论功能的演示任务",
  "actions": [
    {
      "action_type": "like",
      "count": 0,
      "min_interval": 3.0,
      "max_interval": 8.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 5,
        "max_like_count": 3000,
        "min_view_count": 50,
        "min_content_length": 20
      }
    },
    {
      "action_type": "comment",
      "count": 5,
      "min_interval": 15.0,
      "max_interval": 30.0,
      "enabled": true,
      "use_ai_comment": true,
      "ai_comment_fallback": true,
      "comment_templates": [
        "很有见地的观点！👍",
        "感谢分享这个内容 🙏",
        "Great insights! 🚀",
        "非常有价值的信息 💯"
      ],
      "conditions": {
        "min_like_count": 20,
        "max_like_count": 2000,
        "min_reply_count": 2,
        "max_reply_count": 50,
        "min_view_count": 100,
        "min_content_length": 30,
        "max_content_length": 300,
        "has_media": null
      }
    },
    {
      "action_type": "follow",
      "count": 3,
      "min_interval": 20.0,
      "max_interval": 45.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 100,
        "min_view_count": 500,
        "min_content_length": 50,
        "verified_only": null
      }
    }
  ],
  "target": {
    "keywords": ["AI", "人工智能", "机器学习", "技术", "科技"],
    "hashtags": ["#AI", "#MachineLearning", "#Tech"],
    "languages": ["en", "zh"],
    "min_likes": 5,
    "max_age_hours": 24,
    "exclude_keywords": ["广告", "spam", "promotion"]
  },
  "max_duration_minutes": 30,
  "max_total_actions": 25,
  "randomize_intervals": true,
  "respect_rate_limits": true
} 