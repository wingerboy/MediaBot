{
  "session_id": "ai_comment_demo",
  "name": "AI智能评论演示",
  "description": "展示AI生成评论功能的演示任务",
  "max_duration_minutes": 30,
  "max_total_actions": 25,
  "randomize_intervals": true,
  "respect_rate_limits": true,
  "target": {
    "source": "timeline",
    "keywords": ["AIGC", "Agent", "AI Agent", "工作流", "大模型"],
    "hashtags": ["AIGC", "Agent", "AI Agent", "工作流", "大模型"],
    "content_languages": ["en", "zh"],
    "min_likes": 5,
    "max_age_hours": 24,
    "exclude_keywords": ["广告", "spam", "promotion"]
  },
  "actions": [
    {
      "action_type": "like",
      "count": 100,
      "min_interval": 10.0,
      "max_interval": 30.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 5,
        "max_like_count": 3000,
        "min_view_count": 30,
        "min_content_length": 20,
        "exclude_keywords": ["广告", "spam", "promotion"]
      }
    },
    {
      "action_type": "comment",
      "count": 50,
      "min_interval": 15.0,
      "max_interval": 50.0,
      "enabled": true,
      "use_ai_comment": true,
      "ai_comment_fallback": "template",
      "template_comments": [
        "很有见地的观点！👍",
        "感谢分享这个内容 🙏",
        "Great insights! 🚀",
        "非常有价值的信息 💯"
      ],
      "conditions": {
        "min_like_count": 10,
        "max_like_count": 2000,
        "min_reply_count": 1,
        "max_reply_count": 100,
        "min_view_count": 50,
        "min_content_length": 30,
        "max_content_length": 300,
        "has_media": null,
        "exclude_keywords": ["广告", "spam", "promotion"]
      }
    },
    {
      "action_type": "follow",
      "count": 20,
      "min_interval": 60.0,
      "max_interval": 450.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 100,
        "min_view_count": 500,
        "min_content_length": 50,
        "verified_only": null,
        "exclude_keywords": ["广告", "spam", "promotion"]
      }
    }
  ]
} 