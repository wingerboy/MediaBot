{
  "session_id": "ai_comment_demo",
  "name": "AI智能评论演示",
  "description": "展示AI生成评论功能的演示任务",
  "max_duration_minutes": 60,
  "max_total_actions": 200,
  "randomize_intervals": true,
  "respect_rate_limits": true,
  "target": {
    "source": "search",
    "keywords": [],
    "hashtags": ["#ai"],
    "content_languages": ["en", "zh"],
    "is_live": true,
    "min_likes": 1,
    "max_age_hours": 24,
    "exclude_keywords": ["广告", "spam", "promotion","crypto","blockchain","eth","btc","binance","bnb"]
  },
  "actions": [
    {
      "action_type": "like",
      "count": 100,
      "min_interval": 10.0,
      "max_interval": 30.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 3,
        "max_like_count": 3000,
        "min_view_count": 30,
        "min_content_length": 20,
        "exclude_keywords": ["广告", "spam", "promotion","crypto","blockchain","eth","btc","binance","bnb"]
      }
    },
    {
      "action_type": "comment",
      "count": 20,
      "min_interval": 15.0,
      "max_interval": 40.0,
      "enabled": true,
      "use_ai_comment": true,
      "ai_comment_fallback": "template",
      "template_comments": [
        "很有见地的观点！👍",
        "感谢分享这个内容 🙏",
        "Great insights! 🚀",
        "非常有价值的信息 💯"
      ],
      "conditions": {
        "min_like_count": 2,
        "max_like_count": 2000000,
        "min_reply_count": 1,
        "max_reply_count": 100000,
        "min_view_count": 30,
        "min_content_length": 30,
        "max_content_length": 3000,
        "has_media": null,
        "exclude_keywords": ["广告", "spam", "promotion","crypto","blockchain","eth","btc","binance","bnb"]
      }
    },
    {
      "action_type": "follow",
      "count": 0,
      "min_interval": 60.0,
      "max_interval": 80.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 10,
        "min_view_count": 100,
        "min_content_length": 20,
        "verified_only": null,
        "exclude_keywords": ["广告", "spam", "promotion","crypto","blockchain","eth","btc","binance","bnb"]
      }
    }
  ]
} 