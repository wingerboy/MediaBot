{
  "session_id": "basic_engagement",
  "name": "基础互动任务",
  "description": "简单的Twitter互动任务 - 适合新手使用",
  "actions": [
    {
      "action_type": "like",
      "count": 20,
      "min_interval": 3.0,
      "max_interval": 8.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 2,
        "min_view_count": 20
      }
    },
    {
      "action_type": "follow",
      "count": 5,
      "min_interval": 10.0,
      "max_interval": 25.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 20,
        "min_content_length": 30
      }
    },
    {
      "action_type": "comment",
      "count": 3,
      "min_interval": 20.0,
      "max_interval": 40.0,
      "enabled": true,
      "comment_templates": [
        "Great post! 👍",
        "Thanks for sharing!",
        "Interesting! 🤔",
        "Love this! 💯"
      ],
      "conditions": {
        "min_like_count": 10,
        "max_like_count": 1000,
        "min_content_length": 20
      }
    }
  ],
  "target": {
    "keywords": ["technology", "tech", "AI"],
    "hashtags": ["#tech", "#AI"],
    "languages": ["en"],
    "min_likes": 1,
    "max_age_hours": 24,
    "exclude_keywords": ["spam", "ad"]
  },
  "max_duration_minutes": 30,
  "max_total_actions": 28,
  "randomize_intervals": true,
  "respect_rate_limits": true
} 