{
  "session_id": "conditional_engagement",
  "name": "条件化互动任务",
  "description": "基于推文质量指标的智能互动任务 - 包含详细的条件判断",
  "actions": [
    {
      "action_type": "like",
      "count": 25,
      "min_interval": 2.0,
      "max_interval": 6.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 5,
        "max_like_count": 8000,
        "min_view_count": 50,
        "min_content_length": 15,
        "max_content_length": 500,
        "verified_only": null,
        "exclude_verified": false,
        "has_media": null
      }
    },
    {
      "action_type": "follow",
      "count": 8,
      "min_interval": 8.0,
      "max_interval": 20.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 100,
        "max_like_count": 15000,
        "min_view_count": 500,
        "min_content_length": 40,
        "verified_only": false,
        "exclude_verified": false,
        "has_media": null
      }
    },
    {
      "action_type": "comment",
      "count": 4,
      "min_interval": 15.0,
      "max_interval": 35.0,
      "enabled": true,
      "comment_templates": [
        "很有见地的观点！👍",
        "感谢分享这个内容 🙏",
        "Great insights! 🚀",
        "非常有价值的信息 💯",
        "Interesting perspective! 🤔",
        "学到了很多 📚"
      ],
      "conditions": {
        "min_like_count": 30,
        "max_like_count": 3000,
        "min_reply_count": 3,
        "max_reply_count": 50,
        "min_view_count": 200,
        "min_content_length": 25,
        "max_content_length": 300,
        "has_media": false,
        "verified_only": null,
        "exclude_verified": false
      }
    },
    {
      "action_type": "retweet",
      "count": 3,
      "min_interval": 20.0,
      "max_interval": 45.0,
      "enabled": true,
      "conditions": {
        "min_like_count": 200,
        "max_like_count": 5000,
        "min_retweet_count": 20,
        "max_retweet_count": 500,
        "min_view_count": 1000,
        "min_content_length": 50,
        "verified_only": null,
        "exclude_verified": false,
        "has_media": true
      }
    }
  ],
  "target": {
    "keywords": ["AI", "人工智能", "Machine Learning", "技术", "科技"],
    "hashtags": ["#AI", "#MachineLearning", "#Tech", "#Innovation"],
    "languages": ["en", "zh"],
    "min_likes": 5,
    "max_age_hours": 48,
    "exclude_keywords": ["广告", "spam", "promotion", "买卖"]
  },
  "max_duration_minutes": 45,
  "max_total_actions": 40,
  "randomize_intervals": true,
  "respect_rate_limits": true
} 